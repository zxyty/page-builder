{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "outDir": "./lib/",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src/",
    "paths": {
        "@dva-redux": [
          "dva-redux"
        ],
        "@dva-redux/*": [
          "dva-redux/*"
        ],
        "@components": [
          "components"
        ],
        "@components/*": [
          "components/*"
        ],
        "@constants": [
          "constants"
        ],
        "@constants/*": [
          "constants/*"
        ],
        "@utils": [
          "utils"
        ],
        "@utils/*": [
          "utils/*"
        ],
        "@docs": [
          "docs"
        ],
        "@docs/*": [
          "docs/*"
        ],
        "@layout": [
          "layout"
        ],
        "@layout/*": [
          "layout/*"
        ]
    }
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts", "typings/*.ts", "src/**/*.tsx", "src/**/*.js"]
}
